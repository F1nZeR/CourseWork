<Window x:Class="SeMOEditor.Windows.NewGroupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление новой группы" Height="77" Width="322" WindowStartupLocation="CenterOwner">
    <Grid FocusManager.FocusedElement="{Binding ElementName=tbGroupName}">
        <TextBlock Text="Название группы:" Margin="10,10,0,10" HorizontalAlignment="Left" Width="98" />
        <TextBox x:Name="tbGroupName"  Margin="113,10,77,10" />
        <Button Margin="0,10,10,10" Content="OK" Click="OkButtonClick" IsDefault="True" HorizontalAlignment="Right" Width="62"/>
    </Grid>
</Window>
