<Window x:Class="CourseWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:Templates="clr-namespace:CourseWork.Templates"
        Title="СМО" Height="650" Width="825">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Menu IsMainMenu="True">
            <MenuItem Header="Файл">
                <MenuItem Header="Новый" Click="MenuItemNewClick"></MenuItem>
                <MenuItem Header="Открыть" Click="MenuItemOpenClick"></MenuItem>
            </MenuItem>
            <MenuItem Header="Подложка">
                <MenuItem Header="Открыть изображение" Click="MenuItemBackOpenImage"></MenuItem>
                <MenuItem Header="Карта" x:Name="MapTypeMenuItem" Click="MapTypeDataBoundItemClick"></MenuItem>
            </MenuItem>
        </Menu>
        <Templates:DrawControl x:Name="DrawControl" Grid.Row="1"/>

        <Canvas x:Name="DragSelectionCanvas" Visibility="Collapsed" Grid.Row="1">
            <Border 
                x:Name="DragSelectionBorder"
                BorderBrush="Blue"
                BorderThickness="1"
                Background="LightBlue"
                CornerRadius="1"
                Opacity="0.5" />
        </Canvas>
    </Grid>
</Window>
