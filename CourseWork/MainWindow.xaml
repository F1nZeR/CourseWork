<Window x:Class="CourseWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:Templates="clr-namespace:CourseWork.Templates"
        Title="MainWindow" Height="550" Width="625">

    <Grid>
        <Templates:DrawControl x:Name="drawControl"/>
        
        
        <Canvas x:Name="dragSelectionCanvas" Visibility="Collapsed">
            <Border 
                x:Name="dragSelectionBorder"
                BorderBrush="Blue"
                BorderThickness="1"
                Background="LightBlue"
                CornerRadius="1"
                Opacity="0.5" />
        </Canvas>
    </Grid>
</Window>
